@model List<ProductCategory>
<div class="banner">
    <div class="container">
        <div class="row">
            @if (Model.Count > 0)
            {
                foreach (var productCategory in Model)
                {
                    <div class="col-md-4 mb-3">
                        <div class="banner_item align-items-center" style="background-image:url(@productCategory.Icon)">
                            <div class="banner_category">
                                <a href="#">@productCategory.Title</a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-md-4 mb-3">
                    <div class="banner_item align-items-center" style="background-image:url(Assets/Main/images/banner_1.jpg)">
                        <div class="banner_category">
                            <a href="categories.html">women's</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="banner_item align-items-center" style="background-image:url(Assets/Main/images/banner_2.jpg)">
                        <div class="banner_category">
                            <a href="categories.html">accessories's</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="banner_item align-items-center" style="background-image:url(Assets/Main/images/banner_3.jpg)">
                        <div class="banner_category">
                            <a href="categories.html">men's</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>