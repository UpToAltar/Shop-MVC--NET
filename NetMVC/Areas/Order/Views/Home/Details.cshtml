@using NetMVC.Areas.Payment.Models
@model NetMVC.Models.Order

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var methodPayment = (MethodPayment)Model.MethodPay;
    var status = (StatusOrder)Model.Status;
}

<div class="m-3">
    <h1>Details</h1>
    <div>
        <h4>Order</h4>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.OrderDetails)
            </dt>
              <dd class="col-sm-10">
                  @foreach(var item in Model.OrderDetails)
                  {
                      <div class="row">
                          <div class="col-sm-3">
                              <div>
                                    @if (item.Product.Image != null)
                                    {
                                        <img src="@item.Product.Image" alt="@item.Product.Title" style="width: 100px; height: 100px" />
                                    }
                              </div>
                          </div>
                          <div class="col-sm-9">
                              <p>Product: @item.Product.Title</p>
                              <p>Price: @item.Price</p>
                              <p>Quantity: @item.Quantity</p>
                          </div>
                      </div>
                      <hr />
                  }
              </dd>          
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Id)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AppUserIdFK)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AppUserIdFK)
            </dd>
            
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Code)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Code)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CustomerName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CustomerName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CustomerEmail)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CustomerEmail)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PhoneNumber)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Address)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Address)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.MethodPay)
            </dt>
            <dd class="col-sm-10">
                @methodPayment
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TotalAmount)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TotalAmount)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Quantity)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Quantity)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Status)
            </dt>
            <dd class="col-sm-10">
                @status
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IsConfirmByUser)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IsConfirmByUser)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IsConfirmByShop)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IsConfirmByShop)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CreatedAt)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreatedAt)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CreatedBy)
            </dt>
            <dd class="col-sm-10 d-price">
                @Html.DisplayFor(model => model.CreatedBy)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UpdatedAt)
            </dt>
            <dd class="col-sm-10 d-price">
                @Html.DisplayFor(model => model.UpdatedAt)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UpdatedBy)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UpdatedBy)
            </dd>
        </dl>
    </div>
    <div>
        <a class="btn btn-info" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
        <a class="btn btn-primary" asp-action="Index">Back to List</a>
    </div>
</div>