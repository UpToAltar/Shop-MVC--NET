@model NetMVC.Areas.Category.Models.IndexProductCategoriesModel
@using X.PagedList.Mvc.Core;
@using X.PagedList;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    int number = 0;
    var searchStr = Context.Request.Query["searchString"];
}
<partial name="_StatusMessage"/>

<div class="m-3">
    <h1>LIST PRODUCT-CATEGORIES - Total : @Model.totalProductCategories</h1>
    
    <p>
        <a class="btn btn-primary" asp-action="Create">Create New</a>
        <a class="btn btn-warning" id="btnDeleteMany" >Delete Many</a>
    </p>
    <table class="table">
        <thead>
        <tr>
            <th>
                <input type="checkbox" id="selectAll" />
            </th>
            <th>
                #
            </th>
            <th>
                @Html.DisplayNameFor(model => model.productCategories[0].Icon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.productCategories[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.productCategories[0].CreatedAt)
            </th>
            
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.productCategories) {
            number++;
            var index = number + (Model.productCategories.PageNumber - 1) * Model.productCategories.PageSize;
            <tr>
                <td>
                    <input type="checkbox" class="selectItem" value="@item.Id" />
                </td>
                <td>
                    @index
                </td>
                <td>
                    <img src="@item.Icon" alt="image" style="width: 90px; height: 90px;"/>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
                
                <td>
                    <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
    <div class="m-3 d-flex flex-row-reverse">
        @Html.PagedListPager(Model.productCategories, page => Url.Action("Index", new { page, searchString = searchStr }))
    </div>
</div>
<div id="notiToast"></div>
<script src="~/Assets/JsFunction/SelectAllToDelete.js"></script>
<script src="~/Assets/JsFunction/SearchPagination.js"></script>
