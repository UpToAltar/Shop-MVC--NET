@using Microsoft.AspNetCore.Identity
@model NetMVC.Areas.User.Models.IndexModel
@inject UserManager<AppUser> _userManager;
@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutAdmin";
    int number = 0;
}
@{
    // xây dựng Func phát sinh Url từ page ./Index
    Func<int?,string> generateUrl = (int? pagenumber)  => {
        return Url.Page("/User/User", new {pageNumber = pagenumber});
    };

    var datapaging = new {
        currentPage = @Model.currentPage,    // trang hiện tại
        countPages  = @Model.countPage,   // tổng  số trang 
        generateUrl =  generateUrl
    };
}

<partial name="_StatusMessage"/>

<div class="m-3">
    <h1>LIST USER - Total : @Model.usersAll.Count</h1>
    
    <p>
        <a class="btn btn-primary" asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
        <tr>
            <th>
                Number
            </th>
            <th>
                @Html.DisplayNameFor(model => model.users[0].UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.users[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.users[0].Address)
            </th>
            <th>
                Role
            </th>

            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.users)
        {
            number++;
            <tr>
                <td>
                    @number
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @{
                        string userRole = "";
                        var roles = await _userManager.GetRolesAsync(item);
                    }
                    @foreach (string role in roles)
                    {
                        if (roles.Count() > 1)
                        {
                            userRole += role + ", ";
                        }
                        else
                        {
                            userRole += role;
                        }
                    }
                    @userRole
                </td>

                <td>
                    <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
    <partial name="_Paging" model="@datapaging"/>

</div>