@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Register confirmation";
    Layout = "_LayoutIdentity";
}
<div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-password-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-2">@ViewData["Title"]</h1>
                                        <p class="mb-4">Please check your email to verify account</p>
                                    </div>
                                    <hr>
                                    <div class="text-center">
                                        <a class="small" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                                    </div>
                                    <div class="text-center">
                                        <a class="small" asp-page="./Register">Create an Account!</a>
                                    </div>
                                    <div class="text-center">
                                        <a class="small" asp-page="./Login">Already have an account? Login!</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

