@model NetMVC.Models.Product

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<partial name="_StatusMessage"/>
<div class="m-3">
    <h1>Edit</h1>
    <h4>Product</h4>
    <hr />
    <form asp-action="Edit" enctype="multipart/form-data" method="post">
        <div class="row">
            <div class="col">
                <nav aria-label="breadcrumb" class="bg-light rounded-3 p-3 mb-4">
                    <ol class="breadcrumb mb-0 d-flex justify-content-between">
                        <li>
                            <div class="create-click btn btn-primary">Default</div>
                            <div class="create-click btn">Images</div>
                            <div class="create-click btn">SEO</div>
                        </li>
                        <li><button asp-action="Index" class="btn btn-primary mr-2">Back To list</button></li>
                    </ol>
                </nav>
            </div>
        </div>
        
        <div class="row create-info create-active">
            <div class="col-md-6">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control"/>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control"/>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductCode" class="control-label"></label>
                    <input asp-for="ProductCode" class="form-control"/>
                    <span asp-validation-for="ProductCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductCategoryId" class="control-label">Category</label>
                    @Html.DropDownList("ProductCategoryId", ViewData["ProductCategoryId"] as SelectList, "Select Category", new { @class = "form-control" })
                    <span asp-validation-for="ProductCategoryId" class="text-danger"></span>
                </div>

                <div class="form-group d-flex justify-content-between">
                    <div>
                        <label asp-for="Quantity" class="control-label"></label>
                        <input style="width: 90%" asp-for="Quantity" class="form-control"/>
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="Price" class="control-label"></label>
                        <input style="width: 90%" asp-for="Price" class="form-control"/>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="PriceSale" class="control-label"></label>
                        <input style="width: 90%" asp-for="PriceSale" class="form-control"/>
                        <span asp-validation-for="PriceSale" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-check">
                    <input asp-for="IsActive" class="form-check-input"/>
                    <label asp-for="IsActive" class="form-check-label"></label>
                    <span asp-validation-for="IsActive" class="text-danger"></span>
                </div>
                
                <div class="form-check d-flex justify-content-between">
                    <div>
                        <input asp-for="IsHome" class="form-check-input"/>
                        <label asp-for="IsHome" class="control-label"></label>
                        <span asp-validation-for="IsHome" class="text-danger"></span>
                    </div>
                    <div>
                        <input asp-for="IsNew" class="form-check-input"/>
                        <label asp-for="IsNew" class="control-label"></label>
                        <span asp-validation-for="IsNew" class="text-danger"></span>
                    </div>
                
                    <div>
                        <input asp-for="IsHot" class="form-check-input"/>
                        <label asp-for="IsHot" class="control-label"></label>
                        <span asp-validation-for="IsHot" class="text-danger"></span>
                    </div>
                    <div>
                        <input asp-for="IsSale" class="form-check-input"/>
                        <label asp-for="IsSale" class="control-label"></label>
                        <span asp-validation-for="IsSale" class="text-danger"></span>
                    </div>
                </div>
                

            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Detail" class="control-label"></label>
                    <textarea placeholder="If you want to use image, please copy it and paste to textarea" asp-for="Detail" class="form-control editor"></textarea>
                    <span asp-validation-for="Detail" class="text-danger"></span>
                </div>
            </div>

        </div>
        <div class="row create-img create-info d-none">
            <div class="col-md-6">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <div class="row">
                        <div class="col">
                            <label for="formFile" class="form-label">Image-Avatar</label>
                            <input class="form-control" name="file" type="file" id="formFile">
                        </div>
                        <div class="col display-image">
                            <img src="@Model.Image" alt="image" style="width: 90px; height: 90px;"/>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col">
                            <label for="formFileMultiple" class="form-label">More-Image</label>
                            <input class="form-control" name="files" type="file" id="formFileMultiple" multiple/>
                        </div>
                    </div>
                    <div class="row images-more">
                        @if(Model.ProductImages != null)
                        {
                            foreach(var item in Model.ProductImages)
                            {
                                if (item.IsDefault)
                                {
                                    <div class="col-3">
                                        <img src="@item.Image" alt="image" style="margin: 10px; width: 100px; height: 100px; border: 2px solid #7bc876;border-radius: 3px"/>
                                        <div style="margin-left: 34px" data-id="@item.Id" class="btn btn-danger badge badge-danger" onclick="deleteImg(this)">Delete</div>
                                    </div>
                                }
                                else
                                {
                                    <div class="col-3">
                                        <img src="@item.Image" alt="image" style="margin: 10px; width: 100px; height: 100px; border: 2px solid #8f8a8a;border-radius: 3px"/>
                                        <div style="margin-left: 34px" data-id="@item.Id" class="btn btn-danger badge badge-danger" onclick="deleteImg(this)">Delete</div>
                                        <div style="margin-left: 34px" data-id="@item.Id" class="btn badge badge-success" onclick="setDefaultImg(this)">Default</div>
                                    </div>
                                }
                            }
                        }
                    </div>
                    <div class="row display-image-more"></div>
                </div>
                <div class="form-group d-none">
                    <label asp-for="Image" class="control-label"></label>
                    <input asp-for="Image" class="form-control"/>
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row create-info d-none">
            <div class="col-md-6">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="SeoTitle" class="control-label"></label>
                    <input asp-for="SeoTitle" class="form-control"/>
                    <span asp-validation-for="SeoTitle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SeoKeywords" class="control-label"></label>
                    <input asp-for="SeoKeywords" class="form-control"/>
                    <span asp-validation-for="SeoKeywords" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SeoDescription" class="control-label"></label>
                    <input asp-for="SeoDescription" class="form-control"/>
                    <span asp-validation-for="SeoDescription" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group d-none">
                <label asp-for="@Model.CreatedAt" class="control-label"></label>
                <input asp-for="@Model.CreatedAt" class="form-control"/>
                <span asp-validation-for="@Model.CreatedAt" class="text-danger"></span>

            </div>
            <div class="form-group d-none">
                <label asp-for="@Model.CreatedBy" class="control-label"></label>
                <input asp-for="@Model.CreatedBy" class="form-control"/>
                <span asp-validation-for="@Model.CreatedBy" class="text-danger"></span>

            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-success"/>
            <a class="btn btn-primary" asp-action="Index">Back to List</a>
        </div>
    </form>
</div>




