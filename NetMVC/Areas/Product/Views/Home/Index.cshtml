@model NetMVC.Areas.Category.Models.IndexProductsModel
@using X.PagedList.Mvc.Core;
@using X.PagedList;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    int number = 0;
    var searchStr = Context.Request.Query["searchString"];
}
<partial name="_StatusMessage"/>

<div class="m-3">
    <h1>LIST PRODUCTS - Total : @Model.totalProducts</h1>
    
    <p>
        <a class="btn btn-primary" asp-action="Create">Create New</a>
        <a class="btn btn-warning" id="btnDeleteMany" >Delete Many</a>
    </p>
    <table class="table">
        <thead>
        <tr>
            <th>
                <input type="checkbox" id="selectAll" />
            </th>
            <th>
                #
            </th>
            <th>
                @Html.DisplayNameFor(model => model.products[0].Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.products[0].Title)
            </th>
            <th>
                Category
            </th>
            <th>
                @Html.DisplayNameFor(model => model.products[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.products[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.products[0].IsActive)
            </th>
            
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.products) {
            number++;
            var index = number + (Model.products.PageNumber - 1) * Model.products.PageSize;
            <tr>
                <td>
                    <input type="checkbox" class="selectItem" value="@item.Id" />
                </td>
                <td>
                    @index
                </td>
                <td>
                    <img src="@item.Image" alt="image" style="width: 90px; height: 90px;"/>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductCategory.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td class="d-price">
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @if (item.IsActive == true)
                    {
                        <span class="badge badge-success">Yes</span>
                    }
                    else
                    {
                        <span class="badge badge-danger">No</span>
                    }
                </td>
                <td>
                    <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
    <div class="m-3 d-flex flex-row-reverse">
        @Html.PagedListPager(Model.products, page => Url.Action("Index", new { page, searchString = searchStr }))
    </div>
</div>

@* notification toast *@
<div id="notiToast"></div>


