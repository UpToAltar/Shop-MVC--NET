
@model NetMVC.Areas.Role.Models.EditRoleModel

@{
    ViewData["Title"] = "Edit";
    Layout = "_LayoutAdmin";
}

<div class="m-3">
    <h1>Edit</h1>
    
    <h4>Roles</h4>
    <partial name="_StatusMessage"/>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Role.Id" />
                <div class="form-group">
                    <label asp-for="Role.Name" class="control-label"></label>
                    <input asp-for="Role.Name" class="form-control" />
                    <span asp-validation-for="Role.Name" class="text-danger"></span>
                </div>
                <div>
                    <strong> Roles Claim : </strong>
                    @if (Model.RoleClaims.Count > 0)
                    {
                        <ul>
                            @foreach(var claim in Model.RoleClaims)
                            {
                                <li>
                                    <a asp-page="./EditClaim" asp-route-claimid="@claim.Id">@claim.ClaimType : @claim.ClaimValue</a>
                                </li>
                            }
                        </ul>
                    }
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-info mb-2 mt-2" />
                </div>
                
            </form>
        </div>
    </div>
    
    <div>
        <a class="btn btn-primary" asp-action="Index">Back to List</a>
    </div>
</div>
