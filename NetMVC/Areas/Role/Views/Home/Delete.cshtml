@model NetMVC.Areas.Role.Models.EditRoleModel

@{
    ViewData["Title"] = "Delete";
    Layout = "_LayoutAdmin";
}
<div class="m-3">
    <h1>Delete</h1>
    
    <h3>Are you sure you want to delete this role ?</h3>
    <div>
        <h4>User</h4>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Role.Name)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Role.Name)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.RoleClaims)
            </dt>
            @foreach(var claim in Model.RoleClaims)
            {
                <dd class = "col-sm-10">
                    <div>@claim.ClaimType : @claim.ClaimValue</div>
                </dd>
            }
        </dl>
        
        <form asp-action="Delete">
            <input type="hidden" asp-for="@Model.Role.Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a class="btn btn-primary" asp-action="Index">Back to List</a>
        </form>
    </div>

</div>