@using Microsoft.AspNetCore.Identity
@model NetMVC.Areas.Role.Models.RoleIndexModel
@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutAdmin";
    int roleNumber = 1;
}
@{
    // xây dựng Func phát sinh Url từ page ./Index
    Func<int?,string> generateUrl = (int? pagenumber)  => {
        return Url.Page("/Role/Home", new {pageNumber = pagenumber});
    };

    var datapaging = new {
        currentPage = @Model.currentPage,    // trang hiện tại
        countPages  = @Model.countPage,   // tổng  số trang 
        generateUrl =  generateUrl
    };
}
<partial name="_StatusMessage"/>
<div class="m-3">
    <h1>LIST ROLE - TOTAL : @Model.allRoles.Count</h1>
    
    <p>
        <a class="btn btn-primary" asp-action="Create">Create New</a>
        <a class="btn btn-info" asp-action="Create">Add Claims</a>
    </p>
    <table class="table">
        <thead>
        <tr>
            <th>
                Number
            </th>
            <th>
                Role Name
            </th>
            <th>
                Claims
            </th>
            <th>
                Features
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Roles) {
            <tr>
                <td>
                    @roleNumber.ToString()
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                
                <td>
                    @foreach(var claim in item.Claims)
                    {
                        <span class="badge badge-success">@claim</span><br />
                    }
                </td>
                <td>
                    <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
            roleNumber++;
        }
        </tbody>
    </table>
    <partial name="_Paging" model="@datapaging"/>

</div>

