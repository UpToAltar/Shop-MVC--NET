@model NetMVC.Areas.Subcriber.Models.IndexSubscriberModel
@using X.PagedList.Mvc.Core;
@using X.PagedList;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    int number = 0;
    var searchStr = Context.Request.Query["searchString"];
}
<partial name="_StatusMessage"/>

<div class="m-3">
    <h1>LIST SUBSCRIBERS - Total : @Model.totalSubscribers</h1>
    
    <p>
        <a class="btn btn-primary" asp-action="Create">Create New</a>
        <a class="btn btn-warning" id="btnDeleteMany" >Delete Many</a>
        
    </p>
    <table class="table">
        <thead>
        <tr>
            <th>
                <input type="checkbox" id="selectAll" />
            </th>
            <th>
                #
            </th>
            <th>
                @Html.DisplayNameFor(model => model.subscribers[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.subscribers[0].CreatedAt)
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.subscribers) {
            number++;
            var index = number + (Model.subscribers.PageNumber - 1) * Model.subscribers.PageSize;
            <tr>
                <td>
                    <input type="checkbox" class="selectItem" value="@item.Id" />
                </td>
                <td>
                    @index
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
                <td>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
    <div class="m-3 d-flex flex-row-reverse">
        @Html.PagedListPager(Model.subscribers, page => Url.Action("Index", new { page, searchString = searchStr }))
    </div>
</div>

@* notification toast *@
<div id="notiToast"></div>
<script src="~/Assets/JsFunction/SelectAllToDelete.js"></script>
<script src="~/Assets/JsFunction/SearchPagination.js"></script>
