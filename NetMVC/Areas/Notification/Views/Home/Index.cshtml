
@using X.PagedList.Mvc.Core
@model NetMVC.Areas.Notification.Models.IndexNotificationModel
@{
    ViewData["Title"] = "IndexNotification";
    Layout = "_LayoutAdmin";
    int number = 0;
    var searchStr = Context.Request.Query["searchString"];
}
<partial name="_StatusMessage"/>

<div class="m-3">
    <h1>LIST NOTIFICATIONS - Total : @Model.totalNotifications</h1>
    <p style="display: flex">
        <a class="btn btn-warning mr-2" id="btnDeleteMany" >Delete Many</a>
    </p>
    <table class="table">
        <thead>
        <tr>
            <th>
                <input type="checkbox" id="selectAll" />
            </th>
            
            <th>
                #
            </th>
            <th>
                @Html.DisplayNameFor(model => model.notifications[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.notifications[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.notifications[0].CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.notifications[0].CreatedBy)
            </th>


            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.notifications) {
            number++;
            var index = number + (Model.notifications.PageNumber - 1) * Model.notifications.PageSize;
            <tr>
                <td>
                    <input type="checkbox" class="selectItem" value="@item.Id" />
                </td>
                
                <td>
                    @index
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedBy)
                </td>

                <td>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>

            </tr>
        }
        </tbody>
    </table>
    <div class="m-3 d-flex flex-row-reverse">
        @Html.PagedListPager(Model.notifications, page => Url.Action("Index", new { page, searchString = searchStr }))
    </div>
</div>
@* overlay *@
<div id="overlay" class="d-none">
    <div class="loader-wrap">
        <div class="loader"></div>
    </div>
</div>
@* notification toast *@
<div id="notiToast"></div>
<script src="~/Assets/JsFunction/SelectAllToDelete.js"></script>
<script src="~/Assets/JsFunction/SearchPagination.js"></script>


